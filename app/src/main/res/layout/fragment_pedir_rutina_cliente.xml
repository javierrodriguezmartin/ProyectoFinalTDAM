<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PedirRutinaCliente" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/introduce_una_drescripcion_para_la_rutina" />

        <EditText
            android:id="@+id/descripcion_pedir_rutina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@null"
            android:gravity="top|start"
            android:hint="@string/introduce_una_descripci_n_para_la_rutina"
            android:lines="10"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <Button
            android:id="@+id/bton_publica_pedir_rutina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/publicar" />
    </LinearLayout>
</ScrollView>