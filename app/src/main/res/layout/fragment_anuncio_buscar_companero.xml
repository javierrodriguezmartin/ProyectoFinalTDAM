<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AnuncioBuscarCompanero" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto_cabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rellene_los_campos_para_poder_continuar"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/horario">

            <com.google.android.material.textfield.TextInputEditText
                android:backgroundTint="#FFFFFF"
                android:id="@+id/horario_anuncio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/finalidad_del_entrenamiento">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/desc_anuncio"
                android:backgroundTint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/publicar_buscar_compi"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/publicar" />


    </LinearLayout>
</ScrollView>